{
    "manifest_version": 3,
    "name": "MDClone Jira Extension",
    "version": "1.0.0",
    "description": "MDClone extension for Jira ❤️ by Tal Bener",
    "author": "tbener@gmail.com",
    "action": {
        "default_popup": "pages/popup/popup.html",
        "default_icon": "images/icon-32.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+J",
                "mac": "Command+Shift+J"
            }
        }
    },
    "options_page": "pages/options/options.html",
    "content_scripts": [
        {
            "css": [
                "styles/freeze-main.css"
            ],
            "matches": [
                "https://*.atlassian.net/browse/*"
            ]
        },
        {
            "css": [
                "styles/freeze-popup.css"
            ],
            "matches": [
                "https://*.atlassian.net/jira/software/*"
            ]
        }
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-96.png",
        "128": "images/icon-96.png"
    },
    "permissions": [
        "storage"
    ]
}