{
    "manifest_version": 3,
    "name": "MDClone Jira Extension",
    "version": "1.0.12",
    "description": "MDClone Extension for Jira, by Tal Bener",
    "author": "tbener@gmail.com",
    "background": {
        "service_worker": "src/background.js"
    },
    "action": {
        "default_popup": "src/pages/popup/popup.html",
        "default_icon": "src/images/icon-32.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+J",
                "mac": "Command+J"
            }
        }
    },
    "options_page": "src/pages/options/options.html",
    "content_scripts": [
        {
            "js": [
                "src/common/settings.js",
                "src/jira-pages/common/copy-link.js",
                "src/jira-pages/main/add-copy-link.js"
            ],
            "css": [
                "src/jira-pages/main/freeze-title.css"
            ],
            "matches": [
                "https://*.atlassian.net/browse/*"
            ],
            "run_at": "document_idle"
        },
        {
            "js": [
                "src/common/settings.js",
                "src/jira-pages/common/copy-link.js",
                "src/jira-pages/modal/add-copy-link.js"
            ],
            "css": [
                "src/jira-pages/modal/freeze-title.css"
            ],
            "matches": [
                "https://*.atlassian.net/jira/software/*"
            ]
        }
    ],
    "icons": {
        "16": "src/images/icon-16.png",
        "32": "src/images/icon-32.png",
        "48": "src/images/icon-96.png",
        "128": "src/images/icon-96.png"
    },
    "permissions": [
        "storage",
        "tabs"
    ]
}